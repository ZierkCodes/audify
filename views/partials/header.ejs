<header>
    <div class="header">
      <img id="my-profile-image" src="<%= user.profile.avatar %>" alt="" class="header" style="width: 50px; height: 50px; border-radius: 50px;" href="/profile/:id">
      <nav class="nav">
        <% if (activeNav === 'channel') { %>
          <span class="fa-stack active fa-lg">
        <% } else { %>
          <span class="fa-stack fa-lg">
        <% } %>
          <a href="/channels">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-hashtag fa-stack-1x fa-inverse"></i>
          </a>
        </span>
        <button onclick="window.location.href='/auth/logout'">Sign Out</button>
      </nav>
    </div>
</header>
<section id="settings">
  <!-- 
  Need a button that links to the verify screen (if not already verified)
  View profile button that goes to the profile page and add a edit profile link
  Be able to edit About Me and Username
  -->
  <ul>
    <% if (user.profile.verified_military === false) { %>
      <li><a href="/profile/verify">Verify Military or Veteran Status</a></li>
    <% } %>
    <li><a href="<%= `/profile/${user.profile._id}` %>">View and Edit Profile</a></li>
  </ul>
</section>